    "redux-thunk": "2.1.0",
    "reselect": "2.5.4",
    "serialize-javascript": "1.3.0",
    "shrink-ray": "0.1.3",
    "snyk": "1.22.1",
    "url": "0.11.0",
    "winston": "2.3.0"
  },
  "devDependencies": {
    "autoprefixer": "6.5.3",
    "babel-cli": "6.18.0",
    "babel-eslint": "7.1.1",
    "babel-jest": "17.0.2",
    "babel-loader": "6.2.9",
