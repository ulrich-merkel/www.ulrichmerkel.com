    "react": "15.4.2",
    "react-addons-css-transition-group": "15.4.2",
    "react-dom": "15.4.2",
    "react-helmet": "3.3.0",
    "react-redux": "5.0.1",
    "react-router": "3.0.0",
    "redux": "3.6.0",
    "redux-logger": "2.7.4",
    "redux-thunk": "2.1.0",
    "reselect": "2.5.4",
    "serialize-javascript": "1.3.0",
    "shortid": "2.2.6",
