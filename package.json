{
  "name": "ulrichmerkel.com",
  "version": "4.0.0",
  "private": true,
  "author": {
    "name": "Ulrich Merkel",
    "url": "https://www.ulrichmerkel.com"
  },
  "license": "MIT",
  "directories": {
    "source": {
      "root": "./",
      "public": "./public",
      "assets": "./assets",
      "application": "./application"
    },
    "build": {
      "root": "./build",
      "public": "./build/public",
      "assets": "./build/public/assets",
      "application": "./build/application"
    },
    "doc": "./doc",
    "bin": "./bin",
    "config": "./config",
    "report": "./report"
  },
  "description": "Playground for React and all the corresponding technologies.",
  "homepage": "https://www.ulrichmerkel.com",
  "contributors": [
    "Ulrich Merkel"
  ],
  "keywords": [
    "javascript",
    "babel",
    "offline",
    "npm scripts",
    "responsive",
    "react",
    "react-router",
    "redux",
    "webpack",
    "jest",
    "universal"
  ],
  "scripts": {
    "default": "npm run build && npm run server",
    "start": "npm run dev && npm run nodemon",
    "watch": "npm-run-all --parallel watch:*",
    "watch:server": "npm run server -- --watch",
    "watch:client": "npm run client -- --watch",
    "watch:css": "npm run css -- --watch",
    "watch:static": "npm run static -- --watch",
    "dev": "npm run mkdir && npm-run-all --parallel dev:*",
    "dev:server": "npm run server",
    "dev:client": "npm run client",
    "dev:css": "npm run css",
    "dev:static": "npm run static",
    "build": "npm run mkdir && npm-run-all --parallel build:* && npm-run-all --parallel minify:*",
    "build:server": "cross-env NODE_ENV=production npm run server",
    "build:client": "cross-env NODE_ENV=production npm run client",
    "build:css": "npm run css -- --output-style compressed",
    "build:static": "npm run static",
    "minify": "npm-run-all --parallel minify:*",
    "minify:client": "cross-env NODE_ENV=production uglifyjs $npm_package_directories_build_public/js/client.bundle.js -c warnings=false -o $npm_package_directories_build_public/js/client.bundle.js",
    "minify:loader": "cross-env NODE_ENV=production uglifyjs $npm_package_directories_build_public/js/bootstrap.bundle.js -c warnings=false -o $npm_package_directories_build_public/js/bootstrap.bundle.js",
    "minify:images": "node $npm_package_directories_bin/imagemin -d $npm_package_directories_build_root/public/img/content/",
    "test": "npm-run-all --parallel test:*",
    "test:dependencies": "npm list",
    "test:npm-version": "node $npm_package_directories_bin/version --npm --version=$(npm --version) --silent",
    "test:node-version": "node $npm_package_directories_bin/version --node --version=$(node --version) --silent",
    "test:eslint": "eslint --config $npm_package_directories_config/.eslintrc.json --ignore-path $npm_package_directories_config/.eslintignore $npm_package_directories_source_root --ext .js,.jsx",
    "test:jest": "cross-env NODE_ENV=test PORT=3001 jest --config $npm_package_directories_config/jest/config.json",
    "test:flow": "flow check",
    "test:css": "stylelint --config $npm_package_directories_config/.stylelintrc '**/*.scss'",
    "test:nsp": "nsp check",
    "test:retire": "retire --ignorefile $npm_package_directories_config/.retireignore; exit 0;",
    "test:package": "pjl-cli",
    "staged": "npm-run-all --parallel staged:*",
    "staged:pagespeed": "PORT=3002 node $npm_package_directories_bin/pagespeed",
    "doc": "npm-run-all --parallel doc:*",
    "doc:jsdoc": "jsdoc $npm_package_directories_source_application --recurse --destination $npm_package_directories_doc/jsdoc; exit 0;",
    "doc:sassdoc": "sassdoc $npm_package_directories_source_public/scss/**/*.scss --dest $npm_package_directories_doc/scss/",
    "static": "npm run static:cpx && npm run static:lwip",
    "static:cpx": "node $npm_package_directories_bin/cpx -d $npm_package_directories_build_root",
    "static:lwip": "node $npm_package_directories_bin/lwip -d $npm_package_directories_build_root",
    "serve:build": "cd $npm_package_directories_build_root && npm run serve:live",
    "serve:watch": "cd $npm_package_directories_build_root && nodemon -r dotenv/config application/server/bootstrap.js",
    "serve:debug": "cd $npm_package_directories_build_root && NODE_DEBUG='net http' nodemon -r dotenv/config application/server/bootstrap.js",
    "serve:live": "cross-env NODE_ENV=production node -r dotenv/config application/server/bootstrap.js",
    "backstop:test": "cross-env NODE_ENV=production PORT=9002 APPCACHE=false node $npm_package_directories_bin/backstop --run=test --config $npm_package_directories_config/backstop/config.js",
    "backstop:reference": "cross-env NODE_ENV=production PORT=9002 APPCACHE=false node $npm_package_directories_bin/backstop --run=reference --config $npm_package_directories_config/backstop/config.js",
    "backstop:open": "node $npm_package_directories_bin/backstop --run=open --config $npm_package_directories_config/backstop/config.js",
    "server": "babel $npm_package_directories_source_application -d $npm_package_directories_build_application",
    "client": "webpack --display-error-details --config $npm_package_directories_config/webpack.config.js",
    "css": "node-sass $npm_package_directories_source_public/scss/ -o $npm_package_directories_build_public/css/",
    "postcss": "postcss --config $npm_package_directories_config/postcss.json $npm_package_directories_build_public/css/*.css -d $npm_package_directories_build_public/css/",
    "mkdir": "node $npm_package_directories_bin/mkdir -d $npm_package_directories_build_root/",
    "env": "env",
    "travis": "rimraf $npm_package_directories_build_root && npm test --silent && npm run doc && npm run build --silent && npm run staged --silent",
    "coverage": "if which coveralls ; then cat $npm_package_directories_report/lcov.info | coveralls ; else echo 'coveralls not installed' ; fi",
    "snyk": "snyk test && snyk wizard",
    "snyk-protect": "snyk protect",
    "preinstall": "npm prune",
    "postinstall": "npm prune",
    "prepublish": "npm run snyk-protect",
    "prerelease": "npm run test && npm run doc",
    "release": "npm run build"
  },
  "main": "application/server/server.js",
  "browser": "application/client/client.js",
  "files": [
    "lib/",
    "bin/"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ulrich-merkel/www.ulrichmerkel.com"
  },
  "bugs": {
    "url": "https://github.com/ulrich-merkel/www.ulrichmerkel.com/issues"
  },
  "engines": {
    "node": "6.5.0",
    "npm": "3.10.3",
    "yarn": "0.17.8"
  },
  "dependencies": {
    "babel-polyfill": "6.20.0",
    "body-parser": "1.15.2",
    "buffer": "5.0.2",
    "chalk": "1.1.3",
    "classnames": "2.2.5",
    "cookie-parser": "1.4.3",
    "cross-env": "3.1.3",
    "csurf": "1.9.0",
    "dotenv": "2.0.0",
    "express": "4.14.0",
    "express-request-language": "1.1.9",
    "fastclick": "1.0.6",
    "helmet": "3.1.0",
    "hpp": "0.2.1",
    "ip": "1.1.4",
    "isomorphic-fetch": "2.2.1",
    "lodash": "4.17.2",
    "minimist": "1.2.0",
    "morgan": "1.7.0",
    "nodemailer": "2.7.0",
    "nodemon": "1.11.0",
    "object-assign": "4.1.0",
    "path": "0.12.7",
    "picturefill": "3.0.2",
    "react": "15.4.1",
    "react-addons-css-transition-group": "15.4.1",
    "react-dom": "15.4.1",
    "react-helmet": "3.2.3",
    "react-redux": "5.0.1",
    "react-router": "3.0.0",
    "redux": "3.6.0",
