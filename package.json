{
  "name": "ulrichmerkel.com",
  "version": "4.0.1",
  "private": true,
  "author": {
    "name": "Ulrich Merkel",
    "url": "https://www.ulrichmerkel.com"
  },
  "license": "MIT",
  "directories": {
    "source": {
      "root": "./",
      "public": "./public",
      "assets": "./assets",
      "application": "./application"
    },
    "build": {
      "root": "./build",
      "public": "./build/public",
      "assets": "./build/public/assets",
      "application": "./build/application"
    },
    "doc": "./doc",
    "bin": "./bin",
    "config": "./config",
    "report": "./report"
  },
  "description": "Playground for React and all the corresponding technologies.",
  "homepage": "https://www.ulrichmerkel.com",
  "contributors": [
    "Ulrich Merkel"
  ],
  "keywords": [
    "javascript",
    "babel",
    "offline",
    "npm scripts",
    "responsive",
    "react",
    "react-router",
    "redux",
    "webpack",
    "jest",
    "universal"
  ],
  "scripts": {
    "default": "npm run start",
    "start": "npm run build && npm run serve:build",
    "watch": "npm-run-all --parallel watch:*",
    "watch:server": "npm run transpile:server -- --watch",
    "watch:client": "npm run transpile:client -- --watch",
    "watch:css": "npm run css -- --watch",
    "watch:static": "npm run static -- --watch",
    "dev": "npm run mkdir && npm-run-all --parallel dev:*",
    "dev:server": "npm run transpile:server",
    "dev:client": "npm run transpile:client",
    "dev:css": "npm run css",
    "dev:static": "npm run static",
    "build": "npm run mkdir && npm-run-all build:* && npm-run-all minify:*",
    "build:server": "cross-env NODE_ENV=production npm run transpile:server",
    "build:client": "cross-env NODE_ENV=production npm run transpile:client",
    "build:css": "npm run css -- --output-style compressed",
    "build:static": "npm run static",
    "minify": "npm-run-all --parallel minify:*",
    "minify:client": "cross-env NODE_ENV=production uglifyjs $npm_package_directories_build_public/js/client.bundle.js -c warnings=true -o $npm_package_directories_build_public/js/client.bundle.js",
    "minify:loader": "cross-env NODE_ENV=production uglifyjs $npm_package_directories_build_public/js/bootstrap.bundle.js -c warnings=true -o $npm_package_directories_build_public/js/bootstrap.bundle.js",
    "minify:images": "node $npm_package_directories_bin/imagemin -d $npm_package_directories_build_root/public/img/content/",
    "transpile": "npm-run-all --parallel transpile:*",
    "transpile:server": "babel $npm_package_directories_source_application -d $npm_package_directories_build_application",
    "transpile:client": "webpack --display-error-details --config $npm_package_directories_config/webpack.config.js",
    "test": "npm-run-all test:*",
    "test:dependencies": "npm list; exit 0",
    "test:npm-version": "node $npm_package_directories_bin/version --npm --version=$(npm --version) --silent",
    "test:node-version": "node $npm_package_directories_bin/version --node --version=$(node --version) --silent",
    "test:eslint": "eslint --config $npm_package_directories_config/eslint.config.js --ignore-path .eslintignore --ext .js,.jsx --cache --cache-location $npm_package_directories_report/.eslintcache $npm_package_directories_source_root",
    "test:eslint:fix": "npm run test:eslint -- --fix",
    "test:eslint:init": "eslint --init",
    "test:jest": "cross-env NODE_ENV=test PORT=3001 jest --config $npm_package_directories_config/jest/jest.config.js --maxWorkers=4",
    "test:css": "stylelint --config $npm_package_directories_config/stylelint.config.js --syntax scss \"**/*.scss\"",
    "test:nsp": "nsp check; exit 0;",
    "test:retire": "retire --ignorefile $npm_package_directories_config/retireignore.json; exit 0;",
    "test:package": "pjl-cli --rules-file $npm_package_directories_config/.npmpackagejsonlintrc.json",
    "test:license": "license",
    "test:legal": "tldrlegal",
    "test:optional:flow": "flow check; test $? -eq 0 -o $? -eq 2",
    "test:optional:e2e": "nightwatch -c $npm_package_directories_config/nightwatch/nightwatch.config.js",
    "staged": "npm-run-all staged:*",
    "staged:pagespeed": "cross-env PORT=3002 node $npm_package_directories_bin/pagespeed",
    "doc": "npm-run-all doc:*",
    "doc:jsdoc": "jsdoc $npm_package_directories_source_application --recurse --destination $npm_package_directories_doc/jsdoc",
    "doc:sassdoc": "sassdoc $npm_package_directories_source_public/scss/**/*.scss --dest $npm_package_directories_doc/scss/",
    "static": "npm run static:copy && npm run static:images",
    "static:copy": "node $npm_package_directories_bin/cpx -d $npm_package_directories_build_root",
    "static:images": "node $npm_package_directories_bin/sharp -d $npm_package_directories_build_root",
    "serve:build": "cd $npm_package_directories_build_root && npm run serve:live",
    "serve:watch": "cd $npm_package_directories_build_root && nodemon -r dotenv/config $npm_package_main",
    "serve:debug": "cd $npm_package_directories_build_root && cross-env NODE_DEBUG=\"net http\" nodemon -r dotenv/config $npm_package_main",
    "serve:live": "cross-env NODE_ENV=production node -r dotenv/config $npm_package_main",
    "backstop:test": "cross-env NODE_ENV=production PORT=9002 APPCACHE=false node $npm_package_directories_bin/backstop --run=test --config $npm_package_directories_config/backstop/config.js",
    "backstop:reference": "cross-env NODE_ENV=production PORT=9002 APPCACHE=false node $npm_package_directories_bin/backstop --run=reference --config $npm_package_directories_config/backstop/config.js",
    "backstop:open": "node $npm_package_directories_bin/backstop --run=open --config $npm_package_directories_config/backstop/config.js",
    "css": "node-sass $npm_package_directories_source_public/scss/ -o $npm_package_directories_build_public/css/",
    "postcss": "postcss --config $npm_package_directories_config/postcss.json $npm_package_directories_build_public/css/*.css -d $npm_package_directories_build_public/css/",
    "mkdir": "node $npm_package_directories_bin/mkdir -d $npm_package_directories_build_root/",
    "travis": "rimraf $npm_package_directories_build_root && npm test --silent && npm run doc && npm run build --silent && npm run staged --silent",
    "coverage": "if which coveralls ; then cat $npm_package_directories_report/lcov.info | coveralls ; else echo \"coveralls not installed\" ; fi",
    "coverage:open": "open $npm_package_directories_report/lcov-report/index.html",
    "snyk": "snyk test && snyk wizard",
    "snyk-protect": "snyk protect",
    "prepublish": "npm run snyk-protect",
    "prerelease": "npm run test && npm run doc",
    "release": "npm run build",
    "env": "env",
    "upgrade": "if which yarn ; then yarn upgrade-interactive --latest ; else npm outdated ; fi"
  },
  "main": "application/server/bootstrap.js",
  "browser": "application/client/bootstrap.js",
  "files": [
    "*.md",
    "doc",
    "lib",
    "bin"
  ],
  "repository": {
    "type": "git",
