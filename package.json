    "express": "4.14.0",
    "express-request-language": "1.1.9",
    "fastclick": "1.0.6",
    "helmet": "3.3.0",
    "history": "3.2.1",
    "hpp": "0.2.1",
    "ip": "1.1.4",
    "isomorphic-fetch": "2.2.1",
    "lodash": "4.17.4",
    "minimist": "1.2.0",
    "morgan": "1.7.0",
    "nodemailer": "2.7.0",
    "nodemon": "1.11.0",
    "object-assign": "4.1.0",
