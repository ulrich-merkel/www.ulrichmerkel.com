{
  "name": "ulrichmerkel.com",
  "version": "4.0.0-beta.5",
  "private": true,
  "author": {
    "name": "Ulrich Merkel",
    "url": "https://www.ulrichmerkel.com"
  },
  "license": "MIT",
  "directories": {
    "source": {
      "root": "./",
      "public": "./public",
      "assets": "./assets",
      "application": "./application"
    },
    "build": {
      "root": "./../build",
      "public": "./../build/public",
      "assets": "./../build/public/assets",
      "application": "./../build/application"
    },
    "doc": "./doc",
    "bin": "./bin",
    "config": "./config"
  },
  "description": "Playground for React and all the corresponding technologies",
  "homepage": "https://www.ulrichmerkel.com",
  "contributors": [
    "Ulrich Merkel"
  ],
  "keywords": [
    "javascript",
    "babel",
    "offline",
    "npm scripts",
    "responsive",
    "react",
    "react-router",
    "universal",
    "redux"
  ],
  "scripts": {
    "default": "npm run build && npm run server",
    "start": "npm run dev && npm run nodemon",
    "watch": "npm-run-all --parallel watch:*",
    "watch:javascript": "npm run javascript -- --watch",
    "watch:css": "npm run css -- --watch",
    "watch:static": "npm run static -- --watch",
    "dev": "npm run mkdir && npm-run-all --parallel dev:*",
    "dev:javascript": "npm run javascript",
    "dev:css": "npm run css",
    "dev:static": "npm run static",
    "build": "npm run mkdir && npm-run-all --parallel build:* && npm-run-all --parallel minify:*",
    "build:javascript": "cross-env NODE_ENV=production npm run javascript",
    "build:css": "npm run css -- --output-style compressed",
    "build:static": "npm run static",
    "minify": "npm-run-all --parallel minify:*",
    "minify:client": "cross-env NODE_ENV=production uglifyjs $npm_package_directories_build_public/js/client.js -c warnings=false -o $npm_package_directories_build_public/js/client.js",
    "minify:loader": "cross-env NODE_ENV=production uglifyjs $npm_package_directories_build_public/js/loader.js -c warnings=false -o $npm_package_directories_build_public/js/loader.js",
    "minify:images": "node $npm_package_directories_bin/imagemin -d $npm_package_directories_build_root/public/img/content/",
    "test": "npm-run-all --parallel test:*",
    "test:eslint": "eslint --config $npm_package_directories_config/.eslintrc --ignore-path $npm_package_directories_config/.eslintignore ./**/*.{js,jsx}",
    "test:jest": "cross-env NODE_ENV=test jest",
    "test:flow": "flow check",
    "test:css": "stylelint --config $npm_package_directories_config/.stylelintrc '**/*.scss'",
    "test:security": "nsp check",
    "test:pagespeed": "node $npm_package_directories_bin/pagespeed",
    "test-fixme:babel": "babel-doctor",
    "test:package": "pjl-cli",
    "doc": "npm-run-all --parallel doc:*",
    "doc:jsdoc": "jsdoc $npm_package_directories_source_application --recurse --destination $npm_package_directories_doc/jsdoc; exit 0;",
    "doc:sassdoc": "sassdoc $npm_package_directories_source_public/scss/**/*.scss --dest $npm_package_directories_doc/scss/",
    "prejavascript": "customizr -c $npm_package_directories_config/customizr.json",
    "javascript": "babel $npm_package_directories_source_application -d $npm_package_directories_build_application",
    "postjavascript": "npm run browserify",
    "browserify": "npm-run-all --parallel browserify:*",
    "browserify:client": "browserify $npm_package_directories_build_application/client/client.js -o $npm_package_directories_build_public/js/client.js -t --debug -p bundle-collapser/plugin",
    "browserify:loader": "browserify $npm_package_directories_build_application/client/loader.js -o $npm_package_directories_build_public/js/loader.js -t --debug -p bundle-collapser/plugin",
    "css": "node-sass $npm_package_directories_source_public/scss/ -o $npm_package_directories_build_public/css/",
    "postcss": "postcss --use autoprefixer $npm_package_directories_build_public/css/*.css -d $npm_package_directories_build_public/css/",
    "static": "npm run static:cpx && npm run static:lwip",
    "static:cpx": "node $npm_package_directories_bin/cpx -d $npm_package_directories_build_root",
    "static:lwip": "node $npm_package_directories_bin/lwip",
    "serve:build": "cd $npm_package_directories_build_root && NODE_ENV=production node -r dotenv/config application/server/server.js",
    "serve:watch": "cd $npm_package_directories_build_root && nodemon -r dotenv/config application/server/server.js",
    "serve:debug": "cd $npm_package_directories_build_root && NODE_DEBUG='net http' nodemon -r dotenv/config application/server/server.js",
    "serve:live": "cross-env NODE_ENV=production node -r dotenv/config application/server/server.js",
    "prerelease": "npm run lint && npm run doc",
    "release": "npm run build",
    "mkdir": "node $npm_package_directories_bin/mkdir",
    "env": "env"
  },
  "main": "application/server/server.js",
  "browser": "application/client/client.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/ulrich-merkel/www.ulrichmerkel.com"
  },
  "bugs": {
    "url": "https://github.com/ulrich-merkel/www.ulrichmerkel.com/issues"
  },
  "engines": {
    "node": "6.5.0",
    "npm": "3.10.3"
  },
  "dependencies": {
    "babel-polyfill": "6.16.0",
    "body-parser": "1.15.2",
    "buffer": "5.0.0",
    "classnames": "2.2.5",
    "compression": "1.6.2",
    "cookie-parser": "1.4.3",
    "cross-env": "3.1.3",
    "csurf": "1.9.0",
    "dotenv": "2.0.0",
    "express": "4.14.0",
    "express-request-language": "1.1.8",
    "express-session": "1.14.2",
    "fastclick": "1.0.6",
    "helmet": "3.0.0",
    "hpp": "0.2.1",
    "http": "0.0.0",
    "ip": "1.1.4",
    "isomorphic-fetch": "2.2.1",
    "lodash": "4.16.6",
    "minimist": "1.2.0",
    "morgan": "1.7.0",
    "nodemailer": "2.6.4",
    "nodemon": "1.11.0",
    "object-assign": "4.1.0",
    "path": "0.12.7",
    "picturefill": "3.0.2",
    "react": "15.3.2",
    "react-addons-css-transition-group": "15.3.2",
    "react-dom": "15.3.2",
    "react-helmet": "3.1.0",
    "react-redux": "4.4.5",
    "react-router": "3.0.0",
    "redux": "3.6.0",
    "redux-logger": "2.7.4",
    "redux-thunk": "2.1.0",
    "url": "0.11.0",
    "winston": "2.2.0"
  },
  "devDependencies": {
    "autoprefixer": "6.5.1",
    "babel-cli": "6.18.0",
    "babel-eslint": "7.1.0",
    "babel-jest": "16.0.0",
    "babel-plugin-transform-decorators-legacy": "1.3.4",
    "babel-plugin-transform-object-assign": "6.8.0",
    "babel-plugin-transform-react-remove-prop-types": "0.2.10",
    "babel-plugin-transform-react-router-optimize": "1.0.1",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-0": "6.16.0",
    "browserify": "13.1.1",
    "bundle-collapser": "1.2.1",
    "cpx": "1.5.0",
    "customizr": "1.0.0-alpha",
    "eslint": "3.9.1",
    "eslint-config-airbnb": "12.0.0",
    "eslint-plugin-flowtype": "2.25.0",
    "eslint-plugin-import": "2.0.1",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "eslint-plugin-react": "6.5.0",
    "flow-bin": "0.34.0",
    "imagemin": "5.2.2",
    "imagemin-cli": "3.0.0",
    "imagemin-jpegtran": "5.0.2",
    "imagemin-pngquant": "5.0.0",
    "jest-cli": "16.0.2",
    "jsdoc": "3.4.2",
    "lwip": "0.0.9",
    "ngrok": "2.2.3",
    "node-sass": "3.10.1",
    "npm-package-json-lint": "1.4.0",
    "npm-run-all": "3.1.1",
    "nsp": "2.6.2",
    "postcss-cli": "2.6.0",
    "promise": "7.1.1",
    "psi": "2.0.4",
    "react-addons-test-utils": "15.3.2",
    "react-test-renderer": "15.3.2",
    "sassdoc": "2.1.20",
    "stylelint": "7.5.0",
    "uglify-js": "2.7.4"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^[./a-zA-Z0-9$_-]+\\.(jpg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm)$": "<rootDir>/config/jest/FileStub.js",
      "^[./a-zA-Z0-9$_-]+\\.css$": "<rootDir>/config/jest/CSSStub.js"
    },
    "scriptPreprocessor": "<rootDir>/config/jest/transform.js",
    "setupFiles": [
      "<rootDir>/config/polyfills.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/(build|docs|node_modules)/"
    ],
    "testEnvironment": "node",
    "testRegex": "(/__jest__/.*|\\.(test|spec))\\.(js|jsx)$",
    "coverageDirectory": "<rootDir>/reports/",
    "collectCoverage": true
  }
}
